<div ng-app ="DashboardAdmin">
    <div>

        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container" ng-controller="DashboardController as nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" ng-click="nav.toggleNav()">
                        <span class="sr-only">Toggle navigation</span>
                    </button>
                    <a class="navbar-brand" href="#">ADF Dynamic Sample</a>
                </div>
                <div uib-collapse="nav.navCollapsed" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li ng-repeat="item in nav.items | orderBy: title">
                            <p style="color: white; display: none">DashboardId is {{item.dashboardId}}</p>
                            <a ng-href="#/samples/{{item.dashboardId}}">{{item.title}}</a>
                        </li>
                        <li>
                            <a style="cursor: pointer;" ng-click="nav.create()">Create</a>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>

        <div class="container">
            <ng-view />
        </div>
        
